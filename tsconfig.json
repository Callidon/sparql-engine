{
  "compilerOptions": {
    "lib": [ "es2023" ],
    "module": "node16",
    "target": "es2022",
    "declaration": true,
    "outDir": "./dist/",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./node_modules/sparqljs-legacy-type/",
      "./types/"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "tests/"
  ]
}
